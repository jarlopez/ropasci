<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="300.0" prefWidth="200.0" xmlns="http://javafx.com/javafx/8.0.76-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.java.com.rps.gui.controllers.GameController">
    <VBox prefHeight="200.0" prefWidth="429.0" spacing="10.0">
        <padding>
            <Insets left="10.0" right="10.0" top="80.0" />
        </padding>
        <Label text="Score">
            <font>
                <Font name="System Bold" size="13.0" />
            </font>
        </Label>
        <TextArea fx:id="resultsLog" editable="false" prefHeight="200.0" prefWidth="200.0" text="Results here">
         <padding>
            <Insets right="20.0" />
         </padding></TextArea>
    </VBox>
    <HBox alignment="CENTER" prefHeight="97.0" prefWidth="429.0" spacing="10.0">
        <Button fx:id="rockButton" defaultButton="true" mnemonicParsing="false" prefHeight="54.0" prefWidth="73.0" text="Rock" />
        <Button fx:id="paperButton" defaultButton="true" mnemonicParsing="false" prefHeight="54.0" prefWidth="73.0" text="Paper" />
        <Button fx:id="scissorsButton" defaultButton="true" mnemonicParsing="false" prefHeight="54.0" prefWidth="73.0" text="Scissors" />
    </HBox>
</AnchorPane>
